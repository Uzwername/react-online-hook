{
  "compilerOptions": {
    "outDir": "lib/cjs",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "paths": {
    "test-utils": [
      "./utils/test-utils"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
